<div class="container h-100">
  <div class="htop">
    <h2 class="text-center">{{t 'reportsNew.title'}}</h2>
    <form class="edit-form">
      <div class="form-group row">
        <label for="inputMark" class="col-sm-2 col-form-label text-right">{{t 'reportsNew.bookRate'}}</label>
        <div class="col-sm-10">
          {{input type="number" min="1" max="5" class="form-control form-control-lg" id="inputMark" value=model.bookRate
            placeholder=(t 'reportsNew.bookRatePlaceholder')}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPresentation" class="col-sm-2 col-form-label text-right big">{{t 'reportsNew.presentationURL'}}</label>
        <div class="col-sm-10">
          {{input type="url" class="form-control form-control-lg" id="inputPresentation"
            placeholder=(t 'reportsNew.presentationURLPlaceholder') value=model.presentationURL}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputVideo" class="col-sm-2 col-form-label text-right big">{{t 'reportsNew.videoURL'}}</label>
        <div class="col-sm-10">
          {{input type="url" class="form-control form-control-lg" id="inputVideo"
            placeholder=(t 'reportsNew.videoURLPlaceholder') value=model.videoURL}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputBook" class="col-sm-2 col-form-label text-right big">{{t 'reportsNew.book'}}</label>
        <div class="col-sm-10">
          <select class="selectpicker form-control form-control-lg"
                  id="inputBook"
                  data-live-search="true"
                  data-size="5"
                  title="{{t 'reportsNew.bookPlaceholder'}}"
                  onchange={{action "updateBook" value="target.value"}}
                  >
            <option selected disabled>{{t 'reportsNew.bookPlaceholder'}}</option>
            {{#each model.books as |book|}}
              <option value={{book.id}}>{{book.title}} ({{book.author}})</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputSpeaker" class="col-sm-2 col-form-label text-right big">{{t 'reportsNew.speaker'}}</label>
      <div class="col-sm-10">
        <select class="selectpicker form-control form-control-lg"
                id="inputSpeaker"
                data-live-search="true"
                data-size="5"
                title="{{t 'reportsNew.speakerPlaceholder'}}"
                onchange={{action "updateSpeaker" value="target.value"}}
                >
          <option selected disabled>{{t 'reportsNew.speakerPlaceholder'}}</option>
          {{#each model.speakers as |speaker|}}
            <option value={{speaker.id}}>{{speaker.lastName}} {{speaker.firstName}} {{speaker.patronymic}}</option>
          {{/each}}
        </select>
      </div>
      </div>
      <div class="form-group row">
        <label for="inputReview" class="col-sm-2 col-form-label text-right big">{{t 'reportsNew.feedback'}}</label>
        <div class="col-sm-10">
          {{textarea id="inputReview" class="form-control form-control-lg" id="inputPatronymic"
            placeholder=(t 'reportsNew.feedbackPlaceholder') rows="4" value=model.feedback}}
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12 text-right">
          <button type="submit" class="btn btn-primary btn-lg" {{action "saveReport" model}}>{{t 'reportsNew.saveButton'}}</button>
          <button type="submit" class="btn btn-outline-secondary btn-lg" {{action "cancel"}}>{{t 'reportsNew.cancelButton'}}</button>
        </div>
      </div>
    </form>
  </div>
</div>