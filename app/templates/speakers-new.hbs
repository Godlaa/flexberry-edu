<div class="container h-100">
    <div class="htop">
        <h2 class="text-center">Создание спикера: {{full-name model.firstName model.lastName model.patronymic}}</h2>
        <form class="edit-form">
            <div class="form-group row">
                <label for="inputSurname" class="col-sm-2 col-form-label text-right">Фамилия</label>
                <div class="col-sm-10">
                  {{input value=model.lastName class="form-control form-control-lg" id="inputSurname" placeholder="Введите фамилию"}}
                </div>
            </div>
            <div class="form-group row">
                <label for="inputName" class="col-sm-2 col-form-label text-right">Имя</label>
                <div class="col-sm-10">
                    {{input value=model.firstName class="form-control form-control-lg" id="inputName" placeholder="Введите имя"}}
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPatronymic" class="col-sm-2 col-form-label text-right big">Отчество</label>
                <div class="col-sm-10">
                    {{input value=model.patronymic class="form-control form-control-lg" id="inputPatronymic" placeholder="Введите отчество"}}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 text-right">
                    <button type="submit" class="btn btn-primary btn-lg" {{action "saveSpeaker" model}}>Сохранить</button>
                    <button type="submit" class="btn btn-outline-secondary btn-lg" {{action "cancel"}}>Отмена</button>
                </div>
            </div>
        </form>
    </div>
</div>