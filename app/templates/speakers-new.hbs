<div class="container h-100">
    <div class="htop">
        <h2 class="text-center">{{t 'speakersNew.title'}}: {{full-name model.firstName model.lastName model.patronymic}}</h2>
        <form class="edit-form">
            <div class="form-group row">
                <label for="inputSurname" class="col-sm-2 col-form-label text-right">{{t 'speakersNew.lastName'}}</label>
                <div class="col-sm-10">
                  {{input value=model.lastName class="form-control form-control-lg" id="inputSurname" placeholder=(t 'speakersNew.lastNamePlaceholder')}}
                </div>
            </div>
            <div class="form-group row">
                <label for="inputName" class="col-sm-2 col-form-label text-right">{{t 'speakersNew.firstName'}}</label>
                <div class="col-sm-10">
                    {{input value=model.firstName class="form-control form-control-lg" id="inputName" placeholder=(t 'speakersNew.firstNamePlaceholder')}}
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPatronymic" class="col-sm-2 col-form-label text-right big">{{t 'speakersNew.patronymic'}}</label>
                <div class="col-sm-10">
                    {{input value=model.patronymic class="form-control form-control-lg" id="inputPatronymic" placeholder=(t 'speakersNew.patronymicPlaceholder')}}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 text-right">
                    <button type="submit" class="btn btn-primary btn-lg" {{action "saveSpeaker" model}}>{{t 'speakersNew.saveButton'}}</button>
                    <button type="submit" class="btn btn-outline-secondary btn-lg" {{action "cancel"}}>{{t 'speakersNew.cancelButton'}}</button>
                </div>
            </div>
        </form>
    </div>
</div>