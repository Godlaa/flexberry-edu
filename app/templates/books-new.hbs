<div class="container h-100">
  <div class="htop">
    <h2 class="text-center">Создание книги: {{model.title}}</h2>
    <form class="edit-form" {{action "saveBook" on="submit"}}>
      <div class="form-group row">
        <label for="inputTitle" class="col-sm-2 col-form-label text-right">Название</label>
        <div class="col-sm-10">
          {{input value=model.title class="form-control form-control-lg" id="inputTitle" placeholder="Полное название книги"}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputAuthor" class="col-sm-2 col-form-label text-right">Автор</label>
        <div class="col-sm-10">
          {{input value=model.author class="form-control form-control-lg" id="inputAuthor" placeholder="Фамилия И.О. автора"}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPagesCount" class="col-sm-2 col-form-label text-right">Объем</label>
        <div class="col-sm-10">
          {{input value=model.pagesCount type="number" class="form-control form-control-lg" id="inputPagesCount" placeholder="Количество страниц книги"}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputDescriptionURL" class="col-sm-2 col-form-label text-right">Описание</label>
        <div class="col-sm-10">
          {{input value=model.descriptionURL type="url" class="form-control form-control-lg" id="inputDescriptionURL" placeholder="Ссылка на сайт с описанием книги"}}
        </div>
      </div>
      <div class="form-group row">
        <label for="customFile" class="col-sm-2 col-form-label text-right">Обложка</label>
        <div class="input-group input-group-lg col-sm-10">
          <div class="custom-file">
            {{input
              type="file"
              class="custom-file-input"
              id="customFile"
              lang="ru"
              accept="image/*"
              change=(action "handleFileUpload")
            }}
            <label
              class="custom-file-label form-control-lg placeholder-color"
              for="customFile"
              data-browse="Выбрать"
            >
              {{selectedFileName}}
            </label>
          </div>
          <div class="input-group-append">
            <button
              class="btn btn-outline-secondary custom-file-clear"
              type="button"
              disabled={{isFileClearButtonDisabled}}
              {{action "clearFile"}}
            >
              X
            </button>
          </div>
          </div>
      </div>
      <div class="form-group row">
        <label for="inputRating" class="col-sm-2 col-form-label text-right">Рейтинг</label>
        <div class="col-sm-10">
          {{input value=model.rating class="form-control" id="inputRating" placeholder="Рейтинг"}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputTags" class="col-sm-2 col-form-label text-right">Теги</label>
        <div class="col-sm-10">
          {{input value=model.tags class="form-control" id="inputTags" placeholder="#Теги через запятую"}}
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12 text-right">
          <button type="submit" class="btn btn-primary btn-lg" {{action "saveBook" model}}>Сохранить</button>
          <button type="button" class="btn btn-outline-secondary btn-lg" {{action "cancel"}}>Отмена</button>
        </div>
      </div>
    </form>
  </div>
</div>
