<div class="form-signin-wrapper">
  <main class="form-signin text-center">
    <form>
      <img class="mb-4" src="images/logo-dark.png" alt="{{t 'logoAlt'}}" height="57">
      <h1 class="h3 mb-3 fw-normal">{{t 'register.title'}}</h1>

      <div class="form-floating">
        {{input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" value=model.email}}
        {{#each errors.email as |error|}}
          <span class="error">{{error.message}}</span>
        {{/each}}
      </div>
      <div class="form-floating">
        {{input type="password" class="form-control" id="floatingPassword" placeholder=(t 'register.passwordPlaceholder') value=model.password}}
        {{#each errors.password as |error|}}
          <span class="error">{{error.password}}</span>
        {{/each}}
      </div>
      <div class="form-floating">
        {{g-recaptcha-v2
          verified=(action "verified")
          expired=(action "expired")
          reset=reset
        }}
      </div>
      <button class="w-100 btn btn-lg btn-primary mb-3 mt-2" type="submit" disabled={{iAmRobot}} {{action "saveUser" model}}>{{t 'register.submitButton'}}</button>
      <a class="w-100" onclick={{action "goBack"}}>{{t 'register.backButton'}}</a>
    </form>
  </main>
</div>