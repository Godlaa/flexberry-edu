<div class="form-signin-wrapper">
  <main class="form-signin text-center">
    <form>
      <img class="mb-4" src="images/logo-dark.png" alt="" height="57">
      <h1 class="h3 mb-3 fw-normal">{{t 'login.title'}}</h1>
        {{#each errors as |error|}}
          <div class="error">{{error.detail}}</div>
        {{/each}}
      <div class="form-floating">
        {{input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" value=model.email}}
      </div>
      <div class="form-floating">
        {{input type="password" class="form-control" id="floatingPassword" placeholder=(t "edit.fields.password") value=model.password}}
      </div>
      <button class="w-100 btn btn-lg btn-primary mb-3" type="submit" {{action "login" model}}>{{t 'login.submitButton'}}</button>
      <a class="w-100" onclick={{action "goBack"}}>{{t 'login.backButton'}}</a>
    </form>
  </main>
</div>